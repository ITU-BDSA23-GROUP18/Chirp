@page "/FollowingTimeline"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FollowingTimelineModel
@{
    ViewData["Title"] = "Chirp! - Following Timeline";
    Layout = "Shared/_Layout";
}

<!-- Add icon library -->
@if(Model.IsDarkMode)
{
    <link rel="stylesheet" href="css/darkmode.css" />
}
else
{
    <link rel="stylesheet" href="css/style.css" />
}

@if (Model.FontSizeScale == 1.5)
{
    <link rel="stylesheet"  href="css/fontSize1_5x.css" />
}
else if (Model.FontSizeScale == 2)
{
    <link rel="stylesheet"  href="css/fontSize2x.css" />
}
else
{
    <link rel="stylesheet"  href="css/fontSize1x.css" />
}

<div>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <h2> Following Timeline </h2>

        if (Model.Cheeps.Any())
        {
            <ul id="messagelist" class="cheeps">
                @foreach (var cheep in Model.Cheeps)
                {
                    <li>
                        <p>
                            <strong>
                                <a href="/@cheep.Author">@cheep.Author</a>
                            </strong>
                            @cheep.Message
                            <small>&mdash; @cheep.Timestamp</small>
                        </p>
                    </li>
                }
            </ul>
        }
        else
        {
            <em>You are not following anybody!.</em>
        }
        <br/>
        {
                await Html.RenderPartialAsync("Shared/Pagination", Model.Pagination);
        }
    }
</div>
    
