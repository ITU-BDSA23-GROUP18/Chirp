@page "/FollowingTimeline"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FollowingTimelineModel
@{
    ViewData["Title"] = "Chirp! - Following Timeline";
    Layout = "Shared/_Layout";
}

<!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet"  href="css/style.css" />
<div>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <h2> Following Timeline </h2>

        if (Model.Cheeps.Any())
        {
            <ul id="messagelist" class="cheeps">
                @foreach (var cheep in Model.Cheeps)
                {
                    <li>
                        <p>
                            @if (cheep.ProfilePictureUrl != ""){
                            
                                <img src="@cheep.ProfilePictureUrl" width="30" alt="Avatar" class="avatar">
                            } else {
                                <img src="../images/defualt_user_pic.png" width="30" alt="Avatar" class="avatar">
                            }
                            <strong>
                            @if (cheep.DisplayName != "")
                            {
                                <a href="/@cheep.Author">@cheep.DisplayName</a>
                            }
                            else
                            {
                                <a href="/@cheep.Author">@cheep.Author</a>
                            }
                                <small>&mdash; @cheep.Timestamp</small>
                            </strong>
                            <br />
                            @cheep.Message

                        </p>
                    </li>
                }
            </ul>
        }
        else
        {
            <em>You are not following anybody!.</em>
        }
        
        {
                await Html.RenderPartialAsync("Shared/Pagination", Model.Pagination);
        }
    }
</div>
    
