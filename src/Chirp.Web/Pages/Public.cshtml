@page "/"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet"  href="css/style.css" />
<div>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <h2> Write a cheep! </h2>
        <form method="post" asp-page-handler="cheep" class="cheep">
            <textarea id="cheepbox" class="cheepbox" rows="4" maxlength="160" name="message" oninput="countChars()"  placeholder= "What's on your heart, @(User.Identity.Name)?"></textarea>
            <div class="char-count" id="charCount">0/160 characters</div>
            <button class="share"><i class="fa fa-send"></i> Cheep!</button>
        </form>
        
        <script>
            function countChars() {
                  var textEntered = document.getElementById('cheepbox').value;
                  var textLength = textEntered.length;
            
                  if (textLength <= 160) {
                    document.getElementById('charCount').innerHTML = textLength + '/160 characters';
                  } else {
                    
                    document.getElementById('cheepbox').value = textEntered.substring(0, 160);
                    document.getElementById('charCount').innerHTML = '160/160 characters';
                  }
            }
      </script>

        <!-- Line breaks -->
        <br />
        <br />
    }

    <h2> Public Timeline </h2>

    @if (Model.GetCheeps().Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.GetCheeps())
            {
                <li>
                    <p>
                        @if (cheep.ProfilePictureUrl != null && cheep.ProfilePictureUrl != ""){
                            <img src="@cheep.ProfilePictureUrl" width="30" alt="Avatar" class="avatar">
                        } else {
                            <img src="../images/defualt_user_pic.png" width="30" alt="Avatar" class="avatar">
                        }
                        
                        <strong>
                            @if (cheep.DisplayName != "")
                            {
                                <a href="/@cheep.Author">@cheep.DisplayName</a>
                            }
                            else
                            {
                                <a href="/@cheep.Author">@cheep.Author</a>
                            }
                            <small>&mdash; @cheep.Timestamp</small>
                        </strong>
                        <br/>
                        @cheep.Message
                        <br>
                        
                        @if (!User.Identity?.IsAuthenticated ?? false)
                        {
                            <text>Good: </text>
                            @cheep.Reactions.Count(r => r.ReactionType == "Good")
                            <text>|</text>
                            <text>Ish: </text>                            
                            @cheep.Reactions.Count(r => r.ReactionType == "Ish")
                            <text>|</text>
                            <text>Bad: </text>                            
                            @cheep.Reactions.Count(r => r.ReactionType == "Bad")
                        }
                        else
                        {
                            var author = User.Identity?.Name!;
                            var hasReacted = cheep.Reactions.FirstOrDefault(r => r.Author == author)?.ReactionType;
                            
                            @foreach (var (reactionType, displayString) in Model.ReactionTypes)
                            {
                                <form method="post">
                                    <input type="hidden" name="cheepId" value=@cheep.CheepId>
                                    <input type="hidden" name="reactionType" value=@reactionType>
                                    <button style="background-color:@(hasReacted == reactionType ? "#cc6e6e" : "")" asp-page-handler="ChangeReaction">
                                        @displayString :
                                        @cheep.Reactions.Count(r => r.ReactionType == reactionType)
                                    </button>
                                </form>
                            }
                        }
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    
    @{
        //await Html.RenderPartialAsync("Shared/Pagination", Model.Pagination);
    }
</div>


