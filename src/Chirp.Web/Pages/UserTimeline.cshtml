@page "/{author}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model UserTimelineModel

@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var user = HttpContext.GetRouteValue("author")!.ToString();
}

<div>
    <h2> @user's Timeline </h2>
    <h5>@($"Following: {Model.FollowingCount}")</h5>
    
    @if (user != User.Identity!.Name)
    {
        @if (await Model.IsFollowing(user!, User.Identity!.Name!))
        {
            <button class="share" onclick="@{ Model.OnPostUnfollow(user!, User.Identity.Name!); }"><i class="fa fa-send"></i> Unfollow</button>
        }
        else
        {
            <button class="share" onclick="@{ Model.OnPostFollow(user!, User.Identity.Name!); }"><i class="fa fa-send"></i> Follow</button>
        }
    }

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    
    @{
        await Html.RenderPartialAsync("Shared/PageNumbering", Model.Pagination);
    }
</div>
