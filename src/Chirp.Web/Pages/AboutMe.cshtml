@page "/AboutMe"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AboutMeModel
@{
    ViewData["Title"] = "Chirp! - About Me";
    Layout = "Shared/_Layout";
}

<!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet"  href="css/style.css" />
<div>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <h2> About me </h2>

        <h5>Username:</h5>
        <form method="post" asp-page-handler="change">
            <textarea class="aboutme" id="username" name=username value="hello" rows="1" maxlength="20" name="message" placeholder= @User.Identity.Name></textarea>
            <button class="changer"> Change</button>
        </form>

        <h5>Email:</h5>
        <form method="post" asp-page-handler="change">
            <textarea class="aboutme" id="email" value="" rows="1" maxlength="20" name="message" placeholder= @Model.Email></textarea>
            <button class="changer"> Change</button>
        </form>
        <br/>

        <h4>Your Followers</h4>
        if (Model.Followers.Any()){


            <ul id="followerlist" class="followers">
                @foreach (var follower in Model.Followers)
                {
                    <li>
                        <p>
                            <strong>
                                <a href="/@follower.Name">@follower.Name</a>
                            </strong>
                        </p>
                    </li>
                }
            </ul>
        }
        else
        {
            <header>You have no followers</header>
            <br />
        }
        <br/>
        <h4>Your Cheeps</h4>
        
        if (Model.yourCheeps.Any())
        {
            <ul id="messagelist" class="cheeps">
                @foreach (var cheep in Model.yourCheeps)
                {
                    <li>
                        <p>
                            <strong>
                                <a href="/@cheep.Author">@cheep.Author</a>
                            </strong>
                            @cheep.Message
                            <small>&mdash; @cheep.Timestamp</small>
                        </p>
                    </li>
                }
            </ul>
            await Html.RenderPartialAsync("Shared/Pagination", Model.Pagination);
        }
        else
        {
            <header>You have send no cheeps</header>
            <br />
        }
        <form method="post" asp-page-handler="change" class="cheep">
            <button class="delete"> Delete your account</button>
        </form>
        
        {

        }
    }
</div>