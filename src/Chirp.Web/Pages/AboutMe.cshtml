@page "/AboutMe"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AboutMeModel
@{
    ViewData["Title"] = "Chirp! - About Me";
    Layout = "Shared/_Layout";
}

<!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet"  href="css/style.css" />
<div>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <h2> About me </h2>

        <h5>Username:</h5>
        <p>@User.Identity.Name</p>

        <h5>Email:</h5>
        <p>@Model.Email</p>
        <br/>
        <h4> Your Cheeps:</h4>

        if (Model.yourFolowers.Any()){
            
        }

        if (Model.yourCheeps.Any())
        {
            <ul id="messagelist" class="cheeps">
                @foreach (var cheep in Model.yourCheeps)
                {
                    <li>
                        <p>
                            <strong>
                                <a href="/@cheep.Author">@cheep.Author</a>
                            </strong>
                            @cheep.Message
                            <small>&mdash; @cheep.Timestamp</small>
                        </p>
                    </li>
                }
            </ul>
            await Html.RenderPartialAsync("Shared/Pagination", Model.Pagination);
        }
        else
        {
            <header>You have send no cheeps</header>
            <br />
        }
        
        {

        }
    }
</div>