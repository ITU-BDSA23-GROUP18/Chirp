@model Chirp.Web.Pages.Shared.CheepBoxModel
@{
    var reactions = Model.Cheep.Reactions;
    
    <text>Good: </text>
    @reactions.Count(r => r.Reaction == "Good")
    <text>|</text>
    <text>Ish: </text>
    @reactions.Count(r => r.Reaction == "Ish")
    <text>|</text>
    <text>Bad: </text>
    @reactions.Count(r => r.Reaction == "Bad")
}