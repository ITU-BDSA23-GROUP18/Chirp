@page "/FollowView/{followType}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FollowingModel

@{
    ViewData["Title"] = "Chirp! - Following";
    Layout = "Shared/_Layout";
    var followType = HttpContext.GetRouteValue("followType")!.ToString();
}

<!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet"  href="css/style.css" />
<div>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        if (followType == "following")
        {
            if (Model.FollowingList.Any())
            {
                <ul id="messagelist" class="cheeps">
                    @foreach (var author in Model.FollowingList)
                    {
                        <li>
                            <p>
                                <strong>
                                    <a href="/@author.Name">@author.Name</a>
                                </strong>
                            </p>
                        </li>
                    }
                </ul>
            }
            else
            {
                <em>You are not following anybody!.</em>
            }
        }
        else
        {
            if (Model.FollowersList.Any())
            {
                <ul id="userList" class="authors">
                    @foreach (var author in Model.FollowersList)
                    {
                        <li>
                            <p>
                                <strong>
                                    <a href="/@author">@author</a>
                                </strong>
                            </p>
                        </li>
                    }
                </ul>
            }
            else
            {
                <em>No followers here :(.</em>
            }
        }
        {
                await Html.RenderPartialAsync("Shared/PageNumbering", Model.Pagination);
        }
    }
</div>
    
